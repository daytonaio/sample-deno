{
  "tasks": {
    "start": "deno run --allow-net server.ts",
    "dev": "deno run --allow-net --watch server.ts",
    "test": "deno test --allow-net",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "always",
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "std/": "https://deno.land/std@0.220.1/",
    "oak/": "https://deno.land/x/oak@v12.6.1/",
    "cors/": "https://deno.land/x/cors@v1.2.2/"
  }
}
